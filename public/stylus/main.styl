@import 'nib'
@import 'normalize.styl'

gris = #444
gris1 = #f9f9f9
gris2 = #f0f0f0
gris3 = #d9d9d9
gris4 = #f4f4f4
gris5 = #aaa
gris6 = #777
gris7 = #d8d8d8
gris8 = #666
gris9 = #ccc
gris10 = #e9e9e9
gris11 = #ddd

body
    color gris
    font-size 13px

#content
    margin 15px auto
    text-align center
    width 600px
    position relative
    height 100%

#wrapper
    box-shadow 0px 0px 3px gris5
    border-radius 10px
    border 2px solid white
    background-color #gris1
    width 600px
    overflow hidden

#steps
    width 600px
    overflow hidden
    form
        fieldset
            border none
            padding 0px 0px 20px 0px
            margin 0
        legend
            text-align left
            background-color #gris2
            color gris8
            font-size 24px
            text-shadow 1px 1px 1px white
            font-weight bold
            float left
            width 590px
            padding 5px 0px 5px 10px
            margin 10px 0px
            border-bottom 1px solid white
            border-top 1px solid gris3
        p
            float left
            clear both
            margin 5px 0px
            background-color gris4
            border 1px solid white
            width 400px
            padding 10px
            margin-left 100px
            border-radius 5px
            box-shadow 0px 0px 3px gris5
            label
                width 160px
                float left
                text-align right
                margin-right 15px
                line-height 26px
                color gris8
                text-shadow 1px 1px 1px white
                font-weight bold
            &.submit
                background none
                border none
                box-shadow none
        input
            &:focus
                box-shadow 0px 0px 3px gris5
                background-color white
        button
            border none
            outline none
            border-radius 10px
            color white
            display block
            cursor pointer
            margin 0px auto
            clear both
            padding 7px 25px
            text-shadow 0 1px 1px gris6
            font-weight bold
            font-size 22px
            box-shadow 0px 0px 3px gris5
            background #4797ED
            &:hover
                background gris7
                color gris8
                text-shadow 1px 1px 1px white

.step
    float left
    width 600px

#navigation
    height 45px
    background-color gris10
    border-top 1px solid white
    border-bottom-left-radius 10px
    border-bottom-right-radius 10px
    ul
        list-style none
        float left
        margin-left 22px
        li
            float left
            border-right 1px solid gris9
            border-left 1px solid gris9
            position relative
            margin 0px 2px
            a
                display block
                height 45px
                background-color #gris
                color gris6
                outline none
                font-weight bold
                text-decoration none
                line-height 45px
                padding 0px 20px
                border-right 1px solid white
                border-left 1px solid white
                background #gris2
                background -webkit-gradient(
        linear,
        left bottom,
        left top,
        color-stop(0.09, rgb(240,240,240)),
        color-stop(0.55, rgb(227,227,227)),
        color-stop(0.78, rgb(240,240,240))
        )
                background -moz-linear-gradient(
        center bottom,
        rgb(240,240,240) 9%,
        rgb(227,227,227) 55%,
        rgb(240,240,240) 78%
        )

#navigation ul li a:hover,
#navigation ul li.selected a
    background gris7
    color gris8
    text-shadow 1px 1px 1px white

span
    &.checked
        background transparent url(../img/checked.png) no-repeat top left
        position absolute
        top 0px
        left 0px
        width 20px
        height 20px
    &.error
        background transparent url(../img/error.png) no-repeat top left
        position absolute
        top 0px
        left 0px
        width 20px
        height 20px

#steps form input:not([type=radio]),
#steps form textarea,
#steps form select
    background white
    border 1px solid gris11
    border-radius 3px
    outline none
    padding 5px
    width 200px
    float left

