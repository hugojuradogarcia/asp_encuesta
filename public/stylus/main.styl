@import 'nib'
@import 'normalize.styl'

gris = #e9e9e9
gris0 = #f0f0f0
gris2 = #ccc
gris3 = #444
gris4 = #777
gris5 = #d8d8d8
gris6 = #666


body
	font-size 16px
	maring 0
	padding 0
.columndrop-row
	margin 0 auto
	padding 0
	border-radius 10px
    border 2px solid white
    background-color gris6
#steps
	max-width 1200px
	overflow hidden
	margin 0 auto
	padding 0
.step
	max-width 1200px
	margin  auto
	padding 0
#navigation
	height 3em
	background-color gris
	border-top 1px solid white
	border-radius 0px 0px 10px 10px
	ul
		list-style none
		float left
		margin-left 22px
		li
			float left
			border-left 1px solid gris2
			border-right 1px solid gris2
			position relative
			margin 0px 2px
			a
				display block
				height 3em	
				background-color gris3
				color gris4
				outline none
				font-weight bold
				text-decoration none
				line-height 3em
				padding 0px 20px
				border-right 1px solid white
				border-left 1px solid white
				background-color gris0
				background linear-gradient( center bottom, gris1, 9%, gris2, 55%, gris1, 78% )
				&:hover, selected
					background  gris5
					color gris6
					text-shadow 1px 1px 1px white
